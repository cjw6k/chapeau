<?xml version="1.0"?>
<ruleset name="chapeau" namespace="chapeau">

    <description>The coding standard for chapeau.</description>

    <file>./src</file>
    <file>./tests</file>

    <exclude-pattern>./tests/coverage</exclude-pattern>

    <rule ref="PSR12"/>

    <rule ref="PSR1.Methods.CamelCapsMethodName.NotCamelCaps">
        <exclude-pattern>./tests/*</exclude-pattern>
    </rule>

</ruleset>
