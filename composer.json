{
    "name": "cjw6k/chapeau",
    "description": "run php process pipelines via console application",
    "license": "BSD-3-Clause",
    "keywords": ["cli", "pipeline"],
    "authors": [
        {
            "name": "cjw6k",
            "homepage": "https://cj.w6k.ca/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Chapeau\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4",
        "league/pipeline": "^1.0",
        "league/climate": "^3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.22",
        "psalm/plugin-phpunit": "^0.16.1"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
